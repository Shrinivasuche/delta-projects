<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <style>
        table, th, td{
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Username</th>
        </tr>
        <% for(user of users){ %>
            <tr>
                <td> <%= user.id %></td>
                <td> <%= user.email %></td>
                <td> <%= user.username %></td>
            
                <td>
                    <form method="GET" action="/user/<%=user.id%>/edit">
                        <button>edit username</button>
                    </form>
                </td>
                <td>
                    <form method="GET" action="/user/<%=user.id%>">
                        <!--onclick="alert('Button clicked!')"-->
                        <button>Delete User</button>
                    </form>
                </td>
            </tr>
            
        <% } %>
        
    </table>
    <!-- <button style="height:30px; width:70px">Create user</button> -->

    <form method="GET" action="/user/new">
        <button>create user</button>
    </form>

    <!-- <form method="GET" action="/user/new">
        <button style="margin-top: 10px;">Create User</button>
    </form> -->
</body>
</html>

